@model EditUserModel
@{
	ViewData["Title"] = "Edit User";
}

<div class="row">
	<div class="col-4 offset-4">
		<h1 class="display-4 border-bottom text-center  pb-2">@ViewData["Title"]</h1>
	</div>
</div>


<div class="row">
	<div class="col-4 offset-4">
		<form method="post" >
			<div asp-validation-summary="ModelOnly" class="text-danger small"></div>
			<div class="form-group mb-3">
				<label asp-for="NameSurname" class="form-label"><i class="fa-regular fa-circle-user me-1"></i>NameSurname</label>
				<input asp-for="NameSurname" class="form-control" placeholder="johndoe" />
				<span asp-validation-for="NameSurname" class="text-danger small"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="Username" class="form-label"><i class="fa-regular fa-circle-user me-1"></i>Username</label>
				<input  asp-for="Username" class="form-control"  placeholder="johndoe"/>
				<span asp-validation-for="Username" class="text-danger small"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="Role" class="form-label"><i class="fa-solid fa-eye me-1"></i>Role</label>
				<select asp-for="Role" class="form-select">
					<option value="">Please select</option>
					<option value="admin">admin</option>
					<option value="user">user</option>

				</select>
				<span asp-validation-for="Role" class="text-danger small"></span>
			</div>
			<div class="form-group mb-3">
				<div class="form-check">
					<input class="form-check-input" type="checkbox" asp-for="Locked">
					<label class="form-check-label" asp-for="Locked">
						Locked
					</label>
				</div>
			</div>
			<div class="form-group mb-3">
				<button class="btn btn-info d-block"><i class="fa-solid fa-save me-2"></i>Save</button>
			</div>
		</form>
	</div>
</div>

