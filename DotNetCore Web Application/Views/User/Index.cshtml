@model List<UserModel>
@{
	ViewData["Title"] = "Users";
}

<div class="container">
	<div class="row">
		<h2>@ViewData["Title"]</h2>
	</div>
</div>

<div class="row">
	<div class="col">
		<table class="table table-hover table-sm">
			<thead>
				<tr>
					<th>FullName</th>
					<th>UserName</th>
					<th>Locked</th>
					<th>Role</th>
					<th>Created At</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(UserModel user in Model)
				{
					<tr>
						<td>@user.NameSurname</td>
						<td>@user.Username</td>
						<td>
							@if(user.Locked)
							{
								<i class="fa fa-check text-success"></i>
							}
							else{
								<i class="fa fa-times text-danger"></i>

							}
						</td>
						<td>@user.Role</td>
						<td>@user.Created</td>
						<td>
							<button type="button" class="btn btn-info btn-sm"><i class="fa fa-edit me-2"></i>Edit</button>
							<button type="button" class="btn btn-daner btn-sm"><i class="fa fa-trash me-2"></i>Remove</button>

						</td>

					</tr>
				}
			</tbody>
		</table>
	</div>
</div>