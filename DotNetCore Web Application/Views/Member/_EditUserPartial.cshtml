@model EditUserModel
<div class="modal-content">
	<div class="modal-header">
		<h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
		<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
	</div>
	<div class="modal-body">
		<form id="formAddEditUser" asp-action="EditUser" method="post"  data-ajax="true" data-ajax-method="post" data-ajax-update="#ModalEditContent">
			<div asp-validation-summary="ModelOnly" class="text-danger small"></div>
			<div class="form-group mb-3">
				<label asp-for="NameSurname" class="form-label"><i class="fa-regular fa-circle-user me-1"></i>NameSurname</label>
				<input asp-for="NameSurname" class="form-control" placeholder="johndoe" />
				<span asp-validation-for="NameSurname" class="text-danger small"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="Username" class="form-label"><i class="fa-regular fa-circle-user me-1"></i>Username</label>
				<input asp-for="Username" class="form-control" placeholder="johndoe" />
				<span asp-validation-for="Username" class="text-danger small"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="Role" class="form-label"><i class="fa-solid fa-eye me-1"></i>Role</label>
				<select asp-for="Role" class="form-select">
					<option value="">Please select</option>
					<option value="admin">admin</option>
					<option value="user">user</option>

				</select>
				<span asp-validation-for="Role" class="text-danger small"></span>
			</div>
			<div class="form-group mb-3">
				<div class="form-check">
					<input class="form-check-input" type="checkbox" asp-for="Locked">
					<label class="form-check-label" asp-for="Locked">
						Locked
					</label>
				</div>
			</div>

			<input type="hidden" asp-for="Id" />
		</form>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
		<button type="submit" class="btn btn-primary btn-sm" form="formAddEditUser"><i class="fa fa-save"></i>Save</button>
	</div>
</div>


@if (string.IsNullOrEmpty(Model.Done) == false)
{
	<script>
		$("#ModalEdit").modal("hide");
		toastr.success('@Model.Done', "Success");
		refresh.click();
	</script>
}