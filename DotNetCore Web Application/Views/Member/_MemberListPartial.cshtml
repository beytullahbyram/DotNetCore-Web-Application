@model List<UserModel>


<table class="table table-hover table-sm">
	<thead>
		<tr>
			<th>FullName</th>
			<th>UserName</th>
			<th>Locked</th>
			<th>Role</th>
			<th>Created At</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (UserModel user in Model)
		{
			<tr>
				<td>@user.NameSurname</td>
				<td>@user.Username</td>
				<td>
					@if (user.Locked)
					{
						<i class="fa fa-check text-success"></i>
					}
					else
					{
						<i class="fa fa-times text-danger"></i>

					}
				</td>
				<td>@user.Role</td>
				<td>@user.Created</td>
				<td class="text-end">
					<a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info btn-sm"><i class="fa fa-edit me-2"></i>Edit</a>
					<a asp-action="Delete" asp-route-id="@user.Id"
				   onclick="return confirm('Are you sure wan to delete this user : @user.NameSurname ')"
				   class="btn btn-daner btn-sm"><i class="fa fa-trash me-2"></i>Remove</a>
				</td>
			</tr>
		}
	</tbody>
</table>