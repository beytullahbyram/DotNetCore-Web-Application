@model RegisterViewModel 
@{
	ViewData["Title"] = "Register";
}

<div class="row">
		@*soldan 4 birim ötele boşluk bırak*@
	<div class="col-4 offset-4">
		<h1 class="display-4 border-bottom text-center  pb-2">@ViewData["Title"]</h1>
	</div>
</div>


<div class="row">
	<div class="col-4 offset-4">
		<form method="post" >
			@*asağıdaki property hatalarının dışındaki hataları buradaki divde göstericez*@
			<div asp-validation-summary="ModelOnly" class="text-danger small"></div>
			<div class="form-group mb-3">
				<label asp-for="Username" class="form-label"><i class="fa-regular fa-circle-user me-1"></i>Username</label>
				<input  asp-for="Username" class="form-control"  placeholder="johndoe"/>
				@*username ile ilgili hatalrı görmek için asp-validation-for taghelperini kullandık*@
				<span asp-validation-for="Username" class="text-danger small"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="Password" class="form-label"><i class="fa-solid fa-eye-slash me-1"></i>Password</label>
				<input asp-for="Password" class="form-control" placeholder="P@sswoRd!" />
				<span asp-validation-for="Password" class="text-danger small"></span>

			</div>
			<div class="form-group mb-3">
				<label asp-for="RePassword" class="form-label"><i class="fa-solid fa-eye-slash me-1"></i>Re-Password</label>
				<input asp-for="RePassword" class="form-control" placeholder="P@sswoRd!" />
				<span asp-validation-for="RePassword" class="text-danger small"></span>

			</div>
			<div class="form-group d-grid mb-3">
				<button class="btn btn-info d-block"><i class="fa-solid fa-user-plus"></i>Register</button>
			</div>
		</form>
	</div>
</div>